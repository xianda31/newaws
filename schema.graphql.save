# This "input" configures a global authorization rule to enable public access to
# all models in this schema. Learn more about authorization rules here: https://docs.amplify.aws/cli/graphql/authorization-rules
# input AMPLIFY { globalAuthRule: AuthRule = { allow: public } } # FOR TESTING ONLY!

type Member @model @auth(rules: [{ allow: public }]) {
  id: ID!
  firstname: String!
  lastname: String!
  license: String!
  email: String!
  rights: String!
}

type Category @model @auth(rules: [{ allow: public }]) {
  id: ID!
  label: String!
  description: String!
  articles: [Article] @hasMany(indexName: "byCategory", fields: ["id"])
}

type Article @model @auth(rules: [{ allow: public }]) {
  id: ID!
  title: String!
  summary: String!
  body: String!
  categoryId: ID! @index(name: "byCategory", sortKeyFields: ["summary"])
  category: Category @belongsTo(fields: ["categoryId"])
  isPublished: Boolean!
}
