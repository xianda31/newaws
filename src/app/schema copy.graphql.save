type Page @model @auth(rules: [{ allow: public }]) {
  id: ID!
  root_menu: String!
  label: String!
  description: String!
  viewer: String!
  articles: [Article] @hasMany(indexName: "ofPage", fields: ["id"])
}

type Article @model @auth(rules: [{ allow: public }]) {
  id: ID!
  title: String!
  banner: String!
  summary: String!
  # innerHTML: String!
  permalink: String!
  assigned: Boolean!
  featured: Boolean!
  public: Boolean!
  # categoryId: ID! @index(name: "ofCat") #, sortKeyFields: ["summary"])
  # category: Category @belongsTo(fields: ["categoryId"])
  pageId: ID! @index(name: "ofPage") #, sortKeyFields: ["summary"])
  page: Page @belongsTo(fields: ["pageId"])
}
